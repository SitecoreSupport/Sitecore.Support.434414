<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:set="http://www.sitecore.net/xmlconfig/set/" xmlns:role="http://www.sitecore.net/xmlconfig/role/">
    <sitecore role:require="Standalone OR ContentManagement">
        <pipelines>
            <group groupName="exm.messageEvents">
                <pipelines>
                    <emailOpened>
                        <processor type="Sitecore.Support.EmailCampaign.Cm.Pipelines.EmailOpened.ResetContactEmailBounceCount, Sitecore.Support.434414" patch:instead="*[@type='Sitecore.EmailCampaign.Cm.Pipelines.EmailOpened.ResetContactEmailBounceCount, Sitecore.EmailCampaign.Cm']" resolve="true">
                            <!-- Delay in milliseconds -->
                            <Delay>500</Delay>
                            <!-- Number of retry attempts -->
                            <RetryCount>3</RetryCount>
                        </processor>
                    </emailOpened>
                </pipelines>
            </group>
        </pipelines>
    </sitecore>
</configuration>